# =============================================================================
# POLVAK Live Donation Dashboard - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_ENV=development
VITE_APP_NAME=POLVAK Bağış Sistemi
VITE_APP_VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Operator PIN (4 digit) - CHANGE THIS IN PRODUCTION!
VITE_OPERATOR_PIN=1234

# Admin PIN for changing operator PIN (6 digit) - CHANGE THIS IN PRODUCTION!
VITE_ADMIN_PIN=123456

# CSRF Token Secret (generate a random string)
VITE_CSRF_SECRET=change-this-to-random-string-in-production

# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# =============================================================================
# RATE LIMITING
# =============================================================================
# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
VITE_LOCKOUT_DURATION=15

# =============================================================================
# LOGGING
# =============================================================================
# Enable error logging in production
VITE_ENABLE_ERROR_LOGGING=true

# Log level: debug, info, warn, error
VITE_LOG_LEVEL=info

# =============================================================================
# API SETTINGS (for future use)
# =============================================================================
# VITE_API_URL=https://api.example.com
# VITE_API_KEY=your-api-key
